{
  "name": "nativescript-grid-view",
  "version": "3.3.0",
  "description": "A NativeScript GridView widget.",
  "main": "grid-view",
  "typings": "grid-view.d.ts",
  "nativescript": {
    "platforms": {
      "ios": "3.0.0",
      "android": "3.0.0"
    },
    "plugin": {
      "nan": "true",
      "pan": "true",
      "core3": "true",
      "category": "Interface"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/PeterStaev/NativeScript-Grid-View"
  },
  "scripts": {
    "tslint": "tslint --project tsconfig.json",
    "tsc": "tsc --project tsconfig.json",
    "ngc": "ngc --project tsconfig.aot.json",
    "demo-ios": "grunt build && cd demo && tns run ios",
    "demo-android": "grunt build && cd demo && tns run android",
    "demo-ng-ios": "grunt build && cd demo-ng && tns run ios",
    "demo-ng-android": "grunt build && cd demo-ng && tns run android"
  },
  "keywords": [
    "NativeScript",
    "GridView",
    "RecyclerView",
    "UICollectionView",
    "tangra"
  ],
  "author": "Peter Staev <peter@tangrasoft.com>",
	"contributors": [
		"Morten Sj√∏gren (https://github.com/m-abs)"
	],
  "license": "Apache-2.0",
  "peerDependencies": {
    "tns-core-modules": "^3.4.0"
  },
  "devDependencies": {
    "@angular/common": "~5.1.0",
    "@angular/compiler": "~5.1.0",
    "@angular/compiler-cli": "~5.1.0",
    "@angular/core": "~5.1.0",
    "@angular/forms": "~5.1.0",
    "@angular/http": "~5.1.0",
    "@angular/platform-browser": "~5.1.0",
    "@angular/router": "~5.1.0",
    "grunt": "1.0.1",
    "grunt-contrib-clean": "1.1.0",
    "grunt-contrib-copy": "1.0.0",
    "grunt-exec": "2.0.0",
    "nativescript-angular": "~5.1.0",
    "reflect-metadata": "^0.1.10",
    "rxjs": "^5.5.0",
    "tns-core-modules": "3.4.0",
    "tns-platform-declarations": "3.4.0",
    "tslint": "4.4.2",
    "typescript": "~2.4.2",
    "zone.js": "^0.8.14"
  }
}
